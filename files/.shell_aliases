# Typos
alias gti="git"

# Improvements
alias cat='bat'
alias ls='lsd'
alias la='ls -a'
alias ll='ls -lFh'
alias lal='ls -alFh'
alias lt='ls --tree'
alias ltl='ls -l --tree'
alias latl='ls -al --tree'
