# Fun
# alias rr='curl -s -L https://raw.githubusercontent.com/keroserene/rickrollrc/master/roll.sh | bash'
alias sl='sl -lea'

# Improvements
alias cat='bat'
alias ls='lsd'
alias vim='nvim'
alias rm='trash'

# Efficiency
alias la='ls -a'
alias ll='ls -lFh'
alias lal='ls -AlFh'
alias lt='ls --tree'
alias ltl='ls -l --tree'
alias latl='ls -Al --tree --depth 2'
alias g='git'
alias gs='git status'
alias gc='git commit -m'
alias gp='git push'
alias rs='rsync -avz --progress --human-readable'
alias df='df -h'

# Tools aliases
alias spdt='speedtest'
alias hsb='headsetcontrol -b'
alias shjk='ssh root@shark'
alias sherlock='. ~/opt/tools/sherlock/venv/bin/activate.fish && python ~/scripts/sherlock/sherlock/sherlock.py --csv --print-found'
alias icat='kitty +kitten icat'

# Filesystem
alias mkdirs='mkdir -p'
alias size_disk='sudo du /* --exclude proc -schx'

# System
alias fucking='sudo'
alias please='sudo'
alias sctl='sudo systemctl'
alias sfl='sudo fdisk -l'
alias ports='netstat -lntu | grep LISTEN'
alias clean='cd && clear && colorscript -r'

# VPN
